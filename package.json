{
  "name": "live-folders",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:firefox": "npm run build:firefox && web-ext run --source-dir=dist",
    "build": "tsc -b && vite build",
    "build:firefox": "npm run build && node scripts/patch-firefox-manifest.js && web-ext build --source-dir=dist --artifacts-dir=artifacts --overwrite-dest",
    "build:chrome": "npm run build",
    "patch:firefox": "node scripts/patch-firefox-manifest.js",
    "preview": "vite preview",
    "typecheck": "tsc -b --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "lint:md": "markdownlint docs/**/*.md",
    "lint:md:fix": "markdownlint --fix docs/**/*.md",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@crxjs/vite-plugin": "^2.0.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.1",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/webextension-polyfill": "^0.12.4",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^19.0.2",
    "jsdom": "^27.0.0",
    "markdownlint-cli": "^0.45.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.5",
    "vite-plugin-zip-pack": "^1.2.4",
    "vitest": "^3.2.4",
    "web-ext": "^8.10.0"
  }
}

{
	"name": "live-folders",
	"type": "module",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "vite",
		"dev:firefox": "web-ext run --source-dir=dist",
		"build": "tsc -b && vite build",
		"build:firefox": "npm run build && web-ext build --source-dir=dist --artifacts-dir=artifacts --overwrite-dest",
		"build:chrome": "npm run build",
		"preview": "vite preview",
		"typecheck": "tsc -b --noEmit",
		"lint": "biome check src",
		"lint:fix": "biome check --write src",
		"format": "biome format --write src",
		"lint:md": "markdownlint docs/**/*.md",
		"lint:md:fix": "markdownlint --fix docs/**/*.md"
	},
	"dependencies": {
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"webextension-polyfill": "^0.12.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@crxjs/vite-plugin": "^2.0.3",
		"@types/chrome": "^0.1.1",
		"@types/node": "^24.0.15",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@types/webextension-polyfill": "^0.12.4",
		"@vitejs/plugin-react": "^4.7.0",
		"markdownlint-cli": "^0.45.0",
		"typescript": "~5.8.3",
		"vite": "^7.0.5",
		"vite-plugin-zip-pack": "^1.2.4",
		"web-ext": "^8.10.0"
	}
}
